<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to'Blogger', root_path, class:"btn btn-lg btn-primary", id: "logo" %> 
  
    <div class='nav_item'>
      <%= link_to 'About',"",class:"btn btn-default btn-info" %>
    </div>
    
    <div class='nav_item'>
      <%= link_to 'Contact',"",class:"btn btn-default btn-info" %>
    </div>

    <% if logged_in? %>
    <ul class='nav_item pull-right'>
    <li class = 'dropdown'>
      <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", 'data-toggle' => 'dropdown' do %>
      <span>Hi <%= current_user.name %> <b class='caret'></b>
      <% end %>
      <ul class='dropdown-menu'>
        <li><%= link_to 'View Profile', user_path(current_user) %></li>
        <li><%= link_to 'Edit Profile', edit_user_path(current_user) %></li>
        <li class='divider'> </li>
        <li><%= link_to 'Logout', logout_path %></li>
      </ul>
    </li>
    </ul>
    <% else %>
    <div class='nav_item pull-right'>
      <%= link_to 'Login',login_path,class:"btn btn-primary" %>
    </div>
    <% end %>
  </div>
</header>